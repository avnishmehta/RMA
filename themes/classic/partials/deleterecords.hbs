<form name="delete" method="post" id="deletei" class="form-horizontal" role="form">
	<div class="form-group">
		<label for="search" class="col-md-4 control-label">Delete By : </label>
		<div class="col-md-5">
			<select name="searchby" class="selectpicker btn dropdown-toggle selectpicker btn-default" id="selectpickerid" data-toggle="dropdown">
			<option value="a">Compay Name</option>
			<option value="b">RMA Number</option>
			<option value="c">Machine Sr Number</option>
			</select>
		</div>
	</div>
</form>
<script type="text/javascript">
$(document).ready(function(){
	$("#selectpickerid").change(function(){
	    $("#selectpickerid option:selected").each(function(){
	        if($(this).attr("value")=="a"){
		    $("#deleteii").hide();
		    $("#deletepi").hide();
		    $("#deleteci").show();
		}
	        if($(this).attr("value")=="b"){
		    $("#deleteci").hide();
		    $("#deletepi").hide();
		    $("#deleteii").show();
		}
	        if($(this).attr("value")=="c"){
	            $("#deleteci").hide();
	            $("#deleteii").hide();
	            $("#deletepi").show();
	        }
	    });

	}).change();
});
</script>
