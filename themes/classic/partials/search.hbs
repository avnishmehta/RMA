<script type="text/javascript">
$(document).ready(function (){
$("#companynamei,#serialnumberi,#rmanumberi").val("");
$("#companybuti").click(function (e){
	var objcompanyname = $("#companynamei");
	function checkcompanyname(){
		var pattern = /^([a-zA-Z0-9\.\W]{2,})$/;
		var ans = pattern.test(objcompanyname.val());
		if(ans == true){
