<form name="search" method="post" id="searchi" class="form-horizontal" role="form">
	<div class="form-group">
		<label for="search" class="col-md-4 control-label">Search By : </label>
		<div class="col-md-5">
			<select name="searchby" class="selectpicker btn dropdown-toggle selectpicker btn-default" id="selectpickerid" data-toggle="dropdown">
			<option value="a">Client Name</option>
			<option value="b">Serial Number</option>
			<option value="c">RMA Number</option>
			</select>
		</div>
	</div>
</form>
<script type="text/javascript">
$(document).ready(function(){
	$("#selectpickerid").change(function(){
	    $("#selectpickerid option:selected").each(function(){
	        if($(this).attr("value")=="a"){
		    $("#searchsi").hide();
		    $("#searchri").hide();
		    $("#searchci").show();
		}
	        if($(this).attr("value")=="b"){
		    $("#searchri").hide();
		    $("#searchci").hide();
		    $("#searchsi").show();
		}
	        if($(this).attr("value")=="c"){
			$("#searchsi").hide();
			$("#searchci").hide();
			$("#searchri").show();
		}
	    });

	}).change();
});
</script>
